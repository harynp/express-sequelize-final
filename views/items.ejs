<!DOCTYPE html>
<html>
  <body>
    <h1>List Items</h1>
    <a href="items/add"><button>Add</button></a>
    <table border='2px'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Brands</th>
          <th>Code Items</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach( rows => { %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.name%></td>
            <td><%=rows.brand%></td>
            <td><%=rows.codeitem%></td>
            <td>
              <a href="/items/edit/<%=rows.id%>"><button>Edit</button></a>
              <a href="/items/delete/<%=rows.id%>"><button>Delete</button></a>
            </td>
          </tr>
        <% })%>
      </tbody>
    </table>
  </body>
</html>
